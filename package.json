{
  "name": "bot-whatsapp",
  "version": "1.0.0",
  "description": "A WhatsApp bot",
  "main": "src/app/index.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/app/index.js",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build:bundle": "ncc build src/app/index.ts -o bundle",
    "generate:brain": "pnpx prisma generate --schema=./prisma/brain/schema.prisma",
    "generate:simba": "pnpx prisma generate --schema=./prisma/simba/schema.prisma"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "typescript"
  ],
  "author": "José Gutiérrez",
  "license": "ISC",
  "packageManager": "pnpm@10.28.1",
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.3.0",
    "@prisma/adapter-mssql": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "consola": "^3.4.2",
    "dotenv": "^17.2.3",
    "mssql": "^12.2.0",
    "openai": "^6.16.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "github:timothydillan/whatsapp-web.js#fix/duplicate-events-and-bindings"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.10",
    "@types/qrcode-terminal": "^0.12.2",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "prisma": "^7.3.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "better-sqlite3"
    ]
  }
}